{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"complexity": {
				"useOptionalChain": "warn"
			},
			"style": {
				"useSingleCaseStatement": "off"
			},
			"nursery": {
				"useCamelCase": "off",
				"noBannedTypes": {
					"level": "error"
				}
			}
		}
	},
	"files": {},
	"formatter": {
		"indentSize": 4,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingComma": "none"
		},
		"globals": [
			"orm",
			"log",
			"services",
			"config",
			"it",
			"configuration",
			"describe",
			"Express",
			"sockets",
			"JsonWebKey",
			"before",
			"after",
			"beforeEach",
			"afterEach",
			"MeemEvent",
			"SubscribeType"
		]
	},
	"organizeImports": {
		"enabled": true
	}
}